# Supabase Configuration
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_ANON_KEY="your-supabase-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-role-key"

# Database (Supabase PostgreSQL)
DATABASE_URL="postgresql://postgres.[YOUR-PASSWORD]:[YOUR-PASSWORD]@aws-0-[REGION].pooler.supabase.com:6543/postgres"
DIRECT_URL="postgresql://postgres.[YOUR-PASSWORD]:[YOUR-PASSWORD]@aws-0-[REGION].pooler.supabase.com:5432/postgres"

# JWT (Supabase handles this automatically, but you can override if needed)
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# Stripe
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key"
STRIPE_WEBHOOK_SECRET="whsec_your_stripe_webhook_secret"

# AWS S3 (for file uploads - you can also use Supabase Storage)
AWS_ACCESS_KEY_ID="your_aws_access_key"
AWS_SECRET_ACCESS_KEY="your_aws_secret_key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="drivemyway-uploads"

# Email (Resend)
RESEND_API_KEY="re_your_resend_api_key"
FROM_EMAIL="onboarding@resend.dev"
# Inbound: forward received emails (support@, partners@, etc.) to this address
INBOUND_FORWARD_TO="your-email@example.com"
# Webhook signing secret from Resend → Webhooks → your webhook → Signing secret (for email.received)
RESEND_WEBHOOK_SECRET="whsec_xxxxxxxx"

# Cron (for transactional email job: reminders + review requests)
# Set a long random string; call GET/POST /api/cron/booking-emails with Authorization: Bearer <CRON_SECRET>
CRON_SECRET="your-long-random-cron-secret"

# Beta region (optional): when enabled, only users in BETA_REGION_PROVINCE get full signup; others join waitlist
# BETA_REGION_ENABLED="true"
# BETA_REGION_PROVINCE="NS"

# Nova Scotia tax (15%): shown as "Tax" to customer, collected as part of Plekk fees until HST number
# NS_TAX_RATE="0.15"
# TAX_PROVINCES="NS"

# GST/HST small-supplier threshold: tax stays OFF until Stripe revenue (CAD) >= this amount
# SMALL_SUPPLIER_THRESHOLD_CAD="30000"
# NS_HST_RATE="0.15"  (used when tax_mode is on; label shown as "HST (NS)")

# App Configuration
NODE_ENV="development"
PORT=8000
# Public URL of the frontend app. Used for email confirmation links, password reset, Stripe redirects, etc.
# In production/staging this MUST be your real app URL (e.g. https://plekk.com) so links work for all users.
# If this is localhost or unset in production, confirmation and other emails will point users to localhost and fail.
FRONTEND_URL="http://localhost:3000"
BACKEND_URL="http://localhost:8000"

# Google Maps
GOOGLE_MAPS_API_KEY="your_google_maps_api_key"

# File Upload
MAX_FILE_SIZE="10485760" # 10MB
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/webp"

# Supabase Storage (alternative to AWS S3)
SUPABASE_STORAGE_BUCKET="property-photos" 